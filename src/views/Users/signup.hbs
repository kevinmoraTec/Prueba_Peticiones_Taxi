<div class="row">
    <div class="col-md-4 mx-auto">
        <div class="card">
            <div class="card-header">
                Account_Registrer

            </div>
            <div class="card-body">
                <form action="/users/signup" method="POST">
                    <div class="mt-3">
                        <input type="text" class="form-control" name="name" placeholder="Nombre" value="{{name}}">
                    </div>
                    <div class="mt-3">
                        <input type="email" class="form-control" name="email" placeholder="Correo" value="{{email}}"> 
                    </div>
                    <div class="mt-3">
                        <input type="password" class="form-control" name="password" placeholder="password" value="{{password}}">
                    </div>
                    <div class="mt-3">
                        <input type="password" class="form-control" name="confir_password" placeholder="Confirm Password" value="{{Confirm Password}}">
                    </div>
                    <div class="mt-3">
                        <input type="text" class="form-control" name="username" placeholder="Username" value="username"> 
                    </div>
                    <div class="mt-3">
                        <input type="date" class="form-control" name="fecha" placeholder="Fecha Nacimiento">
                    </div>
                    
                    <div class="mt-3">
                        <button  type="submit" class="btn btn-primary w-100">
                            SIGNUP
                        </button>
                        
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>