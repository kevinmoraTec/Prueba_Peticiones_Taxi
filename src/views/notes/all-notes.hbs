<div class="row">
    {{#each notes}} <!-- Recorremos El arreglo de las notas -->
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title d-flex justify-content-between align-items-center">
                        {{title}} <a href="/notes/edit/{{_id}}"><i class="fas fa-edit"></i></a><!-- sI DAMOS click en editar la nota  -->
                    </h4>
                    <p>{{descripcion}}</p>
                    <p>{{date}}</p>
                    <form action="/notes/delete/{{_id}}?_method=DELETE" method="POST">
                    <input type="hidden" name="_method" value="DELETE">

                    <button class="btn btn-danger btn-block " type="submit">
                        Delete
                    </button>

                    </form>
                </div>
            </div>
        </div>
        {{else}} <!--  --> <!-- Si no encotramos ninguna trgeta mostramos este msj-->
            <div class="card mx-auto align-items-center">
                <div class="card-body">
                    <p class="lead">No hay nada Aun </p>
                    <a href="/notes/add" class="btn btn-success btn-block">Crea algo Nuevo!</a>

                </div>
            </div>
    {{/each}}
</div>