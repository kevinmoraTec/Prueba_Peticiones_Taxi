
{{#each errors}}
<div class="alert alert-danger alert-dismissible fade show" role="alert">
  {{text}}
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
{{/each}}

<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>New notes</h3>
        </div>
        <div class="card-body">
            <form action="/notes/new-notes" method="POST"><!-- la direccion para enviar los datos -->
            <div class="form-group"><!-- Para teneer los elementos del Dormulario un poco seprados -->
            
                <input type="text" name="title" class="form-control" placeholder="Inserta tu Titulo"
                autofocus> <!-- name es la manera como el servidor lo va a recibir -->
            </div>
            <div class="form-group">
                <textarea name="descripcion" class="form-control" placeholder="Ingresa tu descripcion"></textarea>
            </div>
            <div class="for-group">

            </div>
        
            <div class=" d-grid gap-2" >
                <button class="btn btn-primary" type="submit" ><!-- submit es para ejecutar un evento -->
                Guardar
                </button>
            </div>
            </form>
        </div>
    </div>

</div>